{
	"name": "Alarm Clock",
	"description": "My first chrome app",
	"version": "1.0.0",
	"manifest_version":2,
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	"permissions": [
		"storage",
		"alwaysOnTopWindows",
		"alarms"
	],
	"icons": {
		"16": "icon-16.png", 
		"128": "icon-128.png" 
	}
}